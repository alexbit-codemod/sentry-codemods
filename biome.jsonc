{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "vcs": { "clientKind": "git" },
  "organizeImports": { "enabled": true },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": { "noDoubleEquals": "error" }
    }
  }
}
